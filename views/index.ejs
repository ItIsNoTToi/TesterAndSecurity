<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Social network</title>
    <link rel="stylesheet" href="/stylesheets/main.css">
</head>
<body>
    <div class="container">
        <p><%= user.username %></p>
        <p><%= user.password %></p>
        <!-- Left Sidebar -->
        <aside action="" method="POST" class="sidebar left-sidebar">
            <nav>
                <div class="logo">
                    <svg viewBox="0 0 24 24" class="twitter-icon"><g><path d="M23.643 4.937c-.835.37-1.732.62-2.675.733.962-.576 1.7-1.49 2.048-2.578-.9.534-1.897.922-2.958 1.13-.85-.904-2.06-1.47-3.4-1.47-2.572 0-4.658 2.086-4.658 4.66 0 .364.042.718.12 1.06-3.873-.195-7.304-2.05-9.602-4.868-.4.69-.63 1.49-.63 2.342 0 1.616.823 3.043 2.072 3.878-.764-.025-1.482-.234-2.11-.583v.06c0 2.257 1.605 4.14 3.737 4.568-.392.106-.803.162-1.227.162-.3 0-.593-.028-.877-.082.593 1.85 2.313 3.198 4.352 3.234-1.595 1.25-3.604 1.995-5.786 1.995-.376 0-.747-.022-1.112-.065 2.062 1.323 4.51 2.093 7.14 2.093 8.57 0 13.255-7.098 13.255-13.254 0-.2-.005-.402-.014-.602.91-.658 1.7-1.477 2.323-2.41z"></path></g></svg>
                </div>
                <ul class="nav-items">
                    <li class="active"><a href="/"><i class="fas fa-home"></i> Home</a></li>
                    <li class="active"><a href="/user"><i class="fas fa-home"></i> Users</a></li>
                    <li><a href="/explore"><i class="fas fa-hashtag"></i> Explore</a></li>
                    <li><a href="/friend"><i class="fas fa-hashtag"></i> Friend</a></li>
                    <li><a href="/Notifications"><i class="far fa-bell"></i> Notifications</a></li>
                    <li><a href="/Messages"><i class="far fa-envelope"></i> Messages</a></li>
                    <li><a href="/Bookmarks"><i class="far fa-bookmark"></i> Bookmarks</a></li>
                    <li><a href="/profile"><i class="far fa-user"></i>Profile</a></li>
                    <li><a href="/logout">Log out</a></li>
                </ul>
                <button  class="tweet-btn">Tweet</button>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <header>
                <h1>Home</h1>
            </header>
            <div class="tweet-box">
                <img src="https://via.placeholder.com/48" alt="User Avatar" class="avatar">
                <form>
                    <textarea placeholder="What's happening?"></textarea>
                    <div class="tweet-box-actions">
                        <div class="tweet-box-icons">
                            <button type="button"><i class="far fa-image"></i></button>
                            <button type="button"><i class="fas fa-poll"></i></button>
                            <button type="button"><i class="far fa-smile"></i></button>
                            <button type="button"><i class="far fa-calendar"></i></button>
                        </div>
                        <button type="submit" class="tweet-btn">Tweet</button>
                    </div>
                </form>
            </div>
            <div class="tweet-feed">
                <% tweets.forEach(function(tweet) { %>
                    <div class="tweet">
                        <img src="<%= tweet.avatar %>" alt="<%= tweet.username %>" class="avatar">
                        <div class="tweet-content">
                            <div class="tweet-header">
                                <span class="name"><%= tweet.name %></span>
                                <span class="username">@<%= tweet.username %></span>
                                <span class="timestamp"><%= tweet.timestamp %></span>
                            </div>
                            <p class="tweet-text"><%= tweet.text %></p>
                            <% if (tweet.image) { %>
                                <img src="<%= tweet.image %>" alt="Tweet image" class="tweet-image">
                            <% } %>
                            <div class="tweet-actions">
                                <button><i class="far fa-comment"></i> <%= tweet.replies %></button>
                                <button><i class="fas fa-retweet"></i> <%= tweet.retweets %></button>
                                <button><i class="far fa-heart"></i> <%= tweet.likes %></button>
                                <button><i class="fas fa-share-alt"></i></button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </main>

        <!-- Right Sidebar -->
        <aside class="sidebar right-sidebar">
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Search Twitter">
            </div>
            <div class="trends">
                <h2>Trends for you</h2>
                <% trends.forEach(function(trend) { %>
                    <div class="trend-item">
                        <span class="trend-category"><%= trend.category %></span>
                        <span class="trend-name"><%= trend.name %></span>
                        <span class="trend-tweets"><%= trend.tweets %> Tweets</span>
                    </div>
                <% }); %>
                <a href="#" class="show-more">Show more</a>
            </div>
            <div class="who-to-follow">
                <h2>Who to follow</h2>
                <% whoToFollow.forEach(function(user) { %>
                    <div class="user-suggestion">
                        <img src="<%= user.avatar %>" alt="<%= user.name %>" class="avatar">
                        <div class="user-info">
                            <span class="name"><%= user.name %></span>
                            <span class="username">@<%= user.username %></span>
                        </div>
                        <button class="follow-btn">Follow</button>
                    </div>
                <% }); %>
                <a href="#" class="show-more">Show more</a>
            </div>
        </aside>
    </div>
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
    <script src="../public/javascripts/main.js"></script>
</body>
</html>